<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Conversion Results</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <main class="container">
      <header>
        <h1>Conversion complete</h1>
        <p>Select a file to download.</p>
      </header>

      <section class="card">
        <ul class="results">
          <% outputs.forEach((output) => { %>
          <li>
            <span><%= output %></span>
            <a class="button-link" href="/download/<%= jobId %>/<%= output %>">Download</a>
          </li>
          <% }) %>
        </ul>
      </section>

      <a class="text-link" href="/">Convert another file</a>
    </main>
  </body>
</html>
